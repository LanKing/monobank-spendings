{
  "compilerOptions": {
    "target": "ES2018",
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true
  }
}
